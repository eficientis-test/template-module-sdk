{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./scripts",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "lib", "dist"]
}
